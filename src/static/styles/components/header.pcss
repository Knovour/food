.header-block {
  background: #795548;
  margin: 0 -16pt 48pt;
  padding: 12pt 16pt;
  color: #FFF3E0;
  box-shadow: rgba(0, 0, 0, 0.156863) 0px 3px 10px, rgba(0, 0, 0, 0.227451) 0px 3px 10px;

  > .header {
    display: inline-block;
    margin: 0;
    font-size: 2.5em;
  }
}

.right-menu {
  float: right;
  color: #FFF3E0;
  font-size: 2.5em;

  > a:visited {
    color: #FFF3E0;
  }
}