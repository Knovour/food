@import 'normalize.css';

@import 'elements/slider.pcss';
@import 'components/index.pcss';
@import 'helpers.pcss';

body {
  background: #FFF3E0;
  color: #795548;
  font-family: Rubik, 微軟正黑體, 'Noto Sans TC', sans-serif;
}

img {
  width: 100%;
  display: block;
}

table {
  border-collapse: collapse;
  width: 100%;
}

h1 {
  font-weight: 100;
  font-size: 3em;
}

h2, h3 {
  font-weight: 500;
}

#main {
  min-height: 100vh;
  padding: 0 16pt 60pt;
}